package javaapplication6;

import java.rmi.Remote;
import java.rmi.RemoteException;

/**
 *
 * @author ThinkPro
 */
public interface Services extends Remote{
    void addBook(String b_name, String author) throws RemoteException;
    void addNewspaper(String n_name, String type) throws RemoteException;
    int countBooks() throws RemoteException;
    int countNewspapers() throws RemoteException;
}
